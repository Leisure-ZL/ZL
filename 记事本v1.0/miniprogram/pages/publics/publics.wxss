@import"/pages/publics&privacy.wxss";
.pub-item{
  width: 720rpx;
  height: 200rpx;
  margin: 20rpx 0 0 15rpx;
}
.item-left{
  width: 110rpx;
  height: 140rpx;
}
.item-mid{
  width: 570rpx;
  height: 140rpx;
  overflow: hidden;
  border-left: 1rpx solid black;
  padding-left: 10rpx;
}
.item-name{
  width: 100rpx;
  height: 30rpx;
  font-size: 10px;
  position: absolute;
  left: 10rpx;
  top: 120rpx;
  text-align: center;
}
.item-img{
  width: 100rpx;
  height: 110rpx;
  float: left;
  z-index: 99;
  border-radius: 50%;
  overflow: hidden;
}
